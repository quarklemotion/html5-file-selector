    "eslint-plugin-import": "2.2.x",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "3.1.x",
    "rollup": "0.36.x",
    "rollup-plugin-babel": "2.6.x",
    "sinon": "2.0.0-pre.3"
