  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "6.16.x",
    "babel-core": "6.17.x",
    "babel-eslint": "7.0.x",
    "babel-polyfill": "6.23.x",
    "babel-preset-latest": "6.16.x",
    "babel-preset-stage-0": "6.16.x",
    "babel-register": "6.16.x",
    "chai": "4.0.0-canary.1",
